{% extends "base.twig" %}

{% block body %}
    <a href="http://127.0.0.1:8000/add-movie">Add Movie</a>
    <a href="http://127.0.0.1:8000/add-quote">Add Quote</a>

    <div class="quotes-container">
        {% for quote in quotes %}
            <div class="quote">
                <a href="http://127.0.0.1:8000/delete-quote/{{ quote.id }}">Delete Quote</a>
                <div class="quote-detail">
                    <div>{{ quote.quote }}</div>
                    <div>{{ quote.character }}</div>
                </div>
                <div class="movie-detail">
                    <div>{{ quote.movie.name }}</div>
                    <div>{{ quote.movie.releaseYear }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}